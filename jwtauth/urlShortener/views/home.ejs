<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>home</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <!-- <link rel='stylesheet' type='text/css' media='screen' href='main.css'> -->
    <!-- <script src='main.js'></script> -->
</head>
<body>
    
     <h1>URL SHORTENER</h1><br>
    <% if (locals.id) { %>
        <p>URL generated: http://localhost:3000/<%= id %></p>
    <% } %>

    <% if (locals.User) { %>
     <p>Welcome! <%= name %></p>
    <% } %>

    <% if (locals.name) { %>
     <p> welcome <%= name %></p>
    <% } %>

     <form method="post" action="http://localhost:3000/">
        <label>ENTER YOUR URL</label>
    <input type="text" name="url" placeholder="https://www.example.com" >
        <button type="submit" >Generate</button>


        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S.No.</th>
                    <th>ShortId</th>
                    <th>Redirect Url</th>
                </thead>
                <tbody>
                    <% urls.forEach(urls => { %>
                        <tr>
                    <td><%= index+1 %></td>
                    <td><%= urls.shortID %></td>
                    <td><%= urls.originalUrl %></td>
                </tr>
                <% }) %>
            </tbody>
         </table>
         <% } %>
                   
</form>
</body>            
</html>